<div class="row">
  <div class="large-6 large-centered columns register-box">
    <h5>Register or <%= link_to "sign-in", new_user_session_path %></h5>
    <div class="inner-content">

      <%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :validate => true do |f| %>
        <%= devise_error_messages! %>

        <div>
          <%= f.label :username %>
          <%= f.text_field :username, :autofocus => true %>
        </div>

        <div>
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true %>
        </div>

        <div>
          <%= f.label :password %>
          <%= f.password_field :password,  :validate => { :presence => true, :confirmation => true } %>
        </div>

        <div>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation %>
        </div>

        <div><%= f.submit "Sign up", :class => "radius button expand" %></div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
