<div class="row">
  <div class="large-6 large-centered columns register-box">
    <h5>Sign-in or <%= link_to "register", new_registration_path(resource_name) %></h5>
    <div class="inner-content">

      <%= form_for resource, :as => resource_name, :url => session_path(resource_name), :validate => true do |f| %>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, :autofocus => true, :validate => { :uniqueness=> false } %>
        </div>

        <div>
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div><%= f.submit "Sign in", :class => "radius button expand" %></div>
      <% end %>

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
