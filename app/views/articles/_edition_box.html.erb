<div class="edition">
  <ul class="inline-list">
  <% if !article.already_requested?(current_user) %>
    <li>
      <%= link_to "Request translation", ask_path(article), :class => "button small" %>
    </li>
  <% end %>
  <% if permitted_to? :edit, article %>
    <li>
      <%= link_to "Edit", edit_article_path(article), :class => "button small" %>
    </li>
  <% end %>
  <% if permitted_to? :translate, article %>
    <li>
      <%= link_to "New Translation", translate_path(article), :class => "button small" %>
    </li>
  <% end %>
  </ul>
</div>
