<div class="super-container large-9 columns edit">
  <div class="header">
    <h2>Edit translation</h2>

    <div class="content">
      <%= render 'form' %>
    </div>

    <%= link_to 'Show', @translation , :class => "button small"%>
    <%= link_to 'Articles', articles_path, :class => "button small" %>
    <%= link_to 'Translations', translations_path, :class => "button small" %>
    <%= link_to "Delete", translation_path(@translation), method: :delete, data: { confirm: 'Are you certain you want to delete this translation ?' }, :class => "button small alert" %>
  </div>
</div>
